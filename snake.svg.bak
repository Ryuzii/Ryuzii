<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="100%" height="100%" viewBox="0 0 1000 300">
  <style>
    @keyframes snake {
      0% {
        transform: translateX(-1000px);
      }
      100% {
        transform: translateX(1000px);
      }
    }
    .background {
      fill: #0D1117;
    }
    .snake-body {
      animation: snake 15s linear infinite;
    }
    .snake-segment {
      fill: #0D4429;
      rx: 5;
      ry: 5;
    }
    .snake-segment:nth-child(5n+1) {
      fill: #006D32;
    }
    .snake-segment:nth-child(5n+3) {
      fill: #26A641;
    }
  </style>
  
  <rect class="background" x="0" y="0" width="100%" height="100%"/>
  
  <path id="wavyPath" d="M-1000,150 Q-750,50 -500,150 T0,150 T500,150 T1000,150 T1500,150 T2000,150" fill="none" stroke="none"/>
  
  <g class="snake-body">
    <!-- Head - larger segment -->
    <rect class="snake-segment" x="-30" y="-15" width="30" height="30">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <!-- Body segments -->
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="0.1s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="0.2s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="0.3s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="0.4s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="0.5s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="0.6s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="0.7s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="0.8s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="0.9s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="1.0s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="1.1s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="1.2s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="1.3s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="1.4s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
    
    <rect class="snake-segment" x="-25" y="-10" width="20" height="20">
      <animateMotion dur="15s" repeatCount="indefinite" rotate="auto" begin="1.5s">
        <mpath xlink:href="#wavyPath"/>
      </animateMotion>
    </rect>
  </g>
</svg> 
